<div class="page-container pt-8">
  <div class="flex items-center justify-between mb-8">
    <div class="w-48">
      <%= link_to restaurant_path(@restaurant) do %>
        <i class="fa-solid fa-chevron-left"></i>
      <% end %>
    </div>

    <h2 class="text-xl font-bold">Edit Menu Item</h2>
    <div class="flex justify-end w-48"></div>
  </div>

  <%= simple_form_for [@restaurant, @menu_item] do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :category %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :prepare_time %>
    </div>
    <div class="flex justify-start items-center pt-8">
      <div class="flex justify-center items-center h-10 rounded-lg bg-black form-actions">
        <%= f.button :submit, class: "text-xl font-bold mx-8 text-white" %>
      </div>
    </div>
  <% end %>
</div>
