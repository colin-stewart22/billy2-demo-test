<%= simple_form_for [restaurant, menu] do |f| %>
  <div>
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>
  </div>
  <div class="flex justify-start items-center pt-8">
    <div class="flex justify-center items-center h-10 rounded-lg bg-black">
      <%= f.submit menu.id.nil? ? "Create" : "Save", class: "text-xl mx-8 text-white" %>
    </div>
  </div>
<% end %>
